<div class="banner_meal">
  <div class="container" >
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3" id= 'signup-form' >

           <h1>Log in</h1>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "bob@gmail.com" %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          placeholder: "••••••" %>
              <%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable?%>
              <%= f.label :remember_me, id:"rememberme" %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-success"  %>
            </div>
          <%= render "devise/shared/links" %>
          <% end %>

      </div>
    </div>
  </div>
</div>
