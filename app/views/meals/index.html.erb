<div class="wrap">
  <div class="container mt-3">
    <div class="row">
    <% @meals.each do |meal| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="meal-card">
          <div class="meal-card-image" style="background-image: url('<%= cl_image_path meal.pictures.first.url.url %>');">
          </div>
            <div class="meal-card-content">
              <div class="meal-card-title">
                <h4><%= link_to meal.title, meal_path(meal), :class => "text-dark" %></h4>
                <p><%= meal.category %></p>
              </div>
              <div class="flex">
                <p><i class="fas fa-utensils"></i>
                Price: <%= humanized_money_with_symbol(meal.price) %>
                </p>
              </div>
            </div>
            <div class="flex">
            <div "meal-card-actions">
              <%= link_to 'Details', meal_path(meal), :class => "ml-3 text-dark" %>
              <% if current_user.usertype == "cook" %>
              <%= link_to 'Edit', edit_meal_path(meal), :class => "ml-3 text-dark" %>
              <%= link_to 'Remove', meal_path(meal), method: :delete, data: { confirm: 'Are you sure?' }, :class => "ml-3 text-dark" %>
            <% end %>
          </div>
        </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>


