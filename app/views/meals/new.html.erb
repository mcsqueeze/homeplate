<div class="banner">
  <div id="signup-form" class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= simple_form_for(@meal) do |f| %>
        <% if @meal.errors.any? %>
          <% @meal.errors.full_messages.each do |m| %>
            <p><%= m %></p>
          <% end %>
        <% end %>
        <h2>Upload a New Meal</h2>
          <%= f.input :title %> <%= f.input :price_cents %>
          <%= f.input :category %>
          <%= f.input :description %>
          <%= f.input :maxservings %>
          <%= f.input :shelflife %>
          <%= f.submit "submit meal", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


