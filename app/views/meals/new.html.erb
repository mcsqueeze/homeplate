<div class="banner_index">
<div class="container">
<div class="row newmealbackground">
<div class="col-xs-12 col-sm-offset-4 col-sm-4">
  <%= simple_form_for(@meal) do |f| %>
  <% if @meal.errors.any? %>
    <% @meal.errors.full_messages.each do |m| %>
      <p><%= m %></p>
    <% end %>
  <% end %>
  <h2>Upload a New Meal</h2>
    <%= f.input :title %> <%= f.input :price_cents %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :maxservings, label: 'Max Servings' %>
    <%= f.input :shelflife, label: 'Shelf Life (Days)' %>
    <br>
    <%= f.submit "Submit Meal", class: "btn btn-success" %>
  <% end %>
  <br>
</div>
</div>
</div>
</div>



