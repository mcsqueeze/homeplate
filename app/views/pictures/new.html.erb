
<div class="banner_meal">
  <div class="container newform" id= 'signup-form'>
    <div class="row" >
      <div class="col-xs-12 col-sm-6 col-sm-offset-3"  >
        <br>
        <br>
        <br>
          <h1>Upload photos</h1>
<br>

          <%= simple_form_for [@meal, @picture] do |p| %>
            <div class="form-inputs">
            <% if @picture.errors.any? %>
              <% @picture.errors.full_messages.each do |m| %>
                <p><%= m %></p>
              <% end %>
            <% end %>

              <%= p.file_field :url %>
              <%= p.input :url_cache, as: :hidden %>
            </div>
<br>
            <div class="form-actions">
            <%= p.submit "Add this Picture", class: "btn btn-success" %>
            </div>


          <% end %>
      </div>
    </div>
  </div>
</div>
